%td
 .btn-group.dropdown
  %button.btn.dropdown-toggle{"data-toggle" => "dropdown"}
   .span.caret
  %ul.dropdown-menu.pull-right.action_menu
   %li= link_to content_tag(:li, fa_icon("eye", text: (t 'actions.show'))), add_fuel
   - if can? :update, :add_fuels
    %li= link_to content_tag(:li, fa_icon("pencil", text: (t 'actions.edit'))), edit_add_fuel_path(add_fuel)
   - if can? :delete, :add_fuels
    %li.danger= link_to content_tag(:li, fa_icon("trash-o", text: (t 'actions.delete'))), add_fuel_path(add_fuel), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }
      
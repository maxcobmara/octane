%td
 .btn-group.dropdown
  %button.btn.dropdown-toggle{"data-toggle" => "dropdown"}
   .span.caret
  %ul.dropdown-menu.pull-right.action_menu
   %li= link_to content_tag(:li, fa_icon("eye", text: (t 'actions.show'))), inden_card
   - if can? :manage, :inden_cards
    %li= link_to content_tag(:li, fa_icon("pencil", text: (t 'actions.edit'))), edit_inden_card_path(inden_card)
    - if inden_card.valid_for_removal==true
     %li.danger= link_to content_tag(:li, fa_icon("trash-o", text: (t 'actions.delete'))), inden_card_path(inden_card), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }
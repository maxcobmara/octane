- provide(:title, 'Vessel Class')
- model_class = VesselCategory
.page-header
  %h1= t 'vessel_categories.title', :default => model_class.model_name.human
%p#notice= notice
%dl.dl-horizontal
  %dt= t 'vessel_categories.vessel_type_id', :default => model_class.human_attribute_name(:vessel_type_id) + ":"
  %dd= check_kin {@vessel_category.vessel_type.try(:description)}
%dl.dl-horizontal
  %dt= t 'vessel_categories.name', :default => model_class.human_attribute_name(:short_name) + ":"
  %dd= check_kin {@vessel_category.short_name}
%dl.dl-horizontal
  %dt= t 'vessel_categories.description', :default => model_class.human_attribute_name(:description) + ":"
  %dd= check_kin {@vessel_category.description}

%dl.dl-horizontal
  %dt &nbsp;
  %dd
    .form-actions
      = link_to content_tag(:i, "", :class => "fa fa-arrow-left ") + " " + t('.back', :default => t("helpers.links.back")), vessel_categories_path, :class => 'btn btn-default'
      - if can? :manage, :vessel_categories
        = link_to content_tag(:i, "", :class => "fa fa-edit") + " " + t('.edit', :default => t("helpers.links.edit")), |
          edit_vessel_category_path(@vessel_category), :class => 'btn btn-default'
        - if @vessel_category.valid_for_removal==true
          = link_to content_tag(:i, "", :class => "fa fa-trash-o icon-white") + " " + t('.destroy', :default => t("helpers.links.destroy")), |
            vessel_category_path(@vessel_category),                                                                                                    |
            :method => 'delete',                                                                                                           |
            :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },                   |
            :class => 'btn btn-danger'                                                                                                     |

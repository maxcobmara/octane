%td
 .btn-group.dropdown
  %button.btn.dropdown-toggle{"data-toggle" => "dropdown"}
   .span.caret
  %ul.dropdown-menu.pull-right.action_menu
   - if can? :create, :add_fuels
    %li= link_to content_tag(:li, fa_icon("tint", text: t('add_fuels.new_addfuel'))), new_add_fuel_path(:unit_fuel_id => unit_fuel)
   - if can? :create, :external_supplieds
    %li= link_to content_tag(:li, fa_icon("plus", text: t('external_supplieds.new_externalsupplied'))), new_external_supplied_path(:unit_fuel_id => unit_fuel)
   - if can? :create, :external_issueds
    %li= link_to content_tag(:li, fa_icon("minus", text: t('external_issueds.new_externalissued'))), new_external_issued_path(:unit_fuel_id => unit_fuel)
   - if can? :create, :inden_usages
    %li= link_to content_tag(:li, fa_icon("minus", text: t('inden_usages.new'))), new_inden_usage_path(:unit_fuel_id => unit_fuel)
   %li= link_to content_tag(:li, fa_icon("eye", text: (t 'actions.show'))), unit_fuel
   - if can? :update, :unit_fuels
    %li= link_to content_tag(:li, fa_icon("pencil", text: (t 'actions.edit'))), edit_unit_fuel_path(unit_fuel)
   - if can? :delete, :unit_fuels
    %li.danger= link_to content_tag(:li, fa_icon("trash-o", text: (t 'actions.delete'))), unit_fuel_path(unit_fuel), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }
      
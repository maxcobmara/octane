- provide(:title, 'Fuel Supplieds')
- model_class = FuelSupplied
.page-header
  %h1= t 'fuel_supplieds.title', :default => model_class.model_name.human
%p#notice= notice
%dl.dl-horizontal
  %dt= t 'fuel_supplieds.depot_fuel_id', :default => model_class.human_attribute_name(:id_no) + ":"
  %dd= check_kin {@fuel_supplied.depot_fuel.month_depot}
%dl.dl-horizontal
  %dt= t 'fuel_supplieds.fuel_type_id', :default => model_class.human_attribute_name(:rank_id) + ":"
  %dd= check_kin {@fuel_supplied.fuel_type.name}
%dl.dl-horizontal
  %dt= t 'fuel_supplieds.quantity', :default => model_class.human_attribute_name(:rank_id) + ":"
  %dd= @fuel_supplied.quantity
%dl.dl-horizontal
  %dt= t 'fuel_supplieds.unit_type_id', :default => model_class.human_attribute_name(:rank_id) + ":"
  %dd= check_kin {@fuel_supplied.unit_type.description}

%dl.dl-horizontal
  %dt= link_to content_tag(:i, "", class: "fa fa-arrow-left ") + " " + t('.back', :default =>( t("helpers.links.back")+" Monthly Fuel")), depot_fuels_path, :class => 'btn btn-default'
  %dd
    .form-actions
      = link_to content_tag(:i, "", :class => "fa fa-arrow-left ") + " " + t('.back', :default => t("helpers.links.back")), fuel_supplieds_path, :class => 'btn btn-default'
      - if can? :update, :fuel_supplieds
        = link_to content_tag(:i, "", :class => "fa fa-edit") + " " + t('.edit', :default => t("helpers.links.edit")), |
          edit_fuel_supplied_path(@fuel_supplied), :class => 'btn btn-default'
      - if can? :delete, :fuel_supplieds
        = link_to content_tag(:i, "", :class => "fa fa-trash-o icon-white") + " " + t('.destroy', :default => t("helpers.links.destroy")), |
          fuel_supplied_path(@fuel_supplied),                                                                                                    |
          :method => 'delete',                                                                                                           |
          :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },                   |
          :class => 'btn btn-danger'                                                                                                     |

 .btn-group.dropdown
  %button.btn.dropdown-toggle{"data-toggle" => "dropdown"}
   .span.caret
  %ul.dropdown-menu.pull-right.action_menu
   %li= link_to content_tag(:li, fa_icon("eye", text: (t 'actions.show'))), fuel_tank

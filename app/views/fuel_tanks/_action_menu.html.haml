    %li= link_to content_tag(:li, fa_icon("pencil", text: (t 'actions.edit'))), edit_fuel_tank_path(fuel_tank)
    %li.danger= link_to content_tag(:li, fa_icon("trash-o", text: (t 'actions.delete'))), fuel_tank_path(fuel_tank), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }
      
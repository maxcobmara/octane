- provide(:title, 'Inden Usages')
- model_class = IndenUsage
.page-header
  %h1= t 'inden_usages.title2', :default =>  model_class.model_name.human
%p#notice= notice
%dl.dl-horizontal
  %dt= t 'inden_usages.inden_card_serial', :default =>  model_class.human_attribute_name(:serial_no) + ":"
  %dd= @inden_usage.inden_card.serial_no
%dl.dl-horizontal
  %dt= t 'inden_usages.unit_fuel_id', :default =>  model_class.human_attribute_name(:unit_fuel_id) + ":"
  %dd= @inden_usage.unit_fuel.try(:month_unit)
%dl.dl-horizontal
  %dt= t 'inden_usages.issue_date', :default =>  model_class.human_attribute_name(:issue_date) + ":"
  %dd
    = check_kin {l(@inden_usage.issue_date)}
    *
%dl.dl-horizontal
  %dt= t 'inden_usages.petrol_ltr', :default =>  model_class.human_attribute_name(:petrol_ltr) + ":"
  %dd= @inden_usage.petrol_ltr
%dl.dl-horizontal
  %dt= t 'inden_usages.petrol_price', :default =>  model_class.human_attribute_name(:petrol_price) + ":"
  %dd= ringgols(@inden_usage.petrol_price)
%dl.dl-horizontal
  %dt= t 'inden_usages.diesel_ltr', :default =>  model_class.human_attribute_name(:diesel_ltr) + ":"
  %dd= @inden_usage.diesel_ltr
%dl.dl-horizontal
  %dt= t 'inden_usages.diesel_price', :default =>  model_class.human_attribute_name(:diesel_price) + ":"
  %dd= ringgols(@inden_usage.diesel_price)
%hr
%dl.dl-horizontal
  %dt= t 'inden_usages.petronas_qty'
  %dd
%dl.dl-horizontal
  %dt= t 'inden_usages.petronas_p_ltr', :default =>  model_class.human_attribute_name(:petronas_p_ltr) + ":"
  %dd= @inden_usage.petronas_p_ltr
%dl.dl-horizontal
  %dt= t 'inden_usages.petronal_p_price', :default =>  model_class.human_attribute_name(:petronal_p_price) + ":"
  %dd= ringgols(@inden_usage.petronal_p_price)
%dl.dl-horizontal
  %dt= t 'inden_usages.petronas_d_ltr', :default =>  model_class.human_attribute_name(:petronas_d_ltr) + ":"
  %dd= @inden_usage.petronas_d_ltr
%dl.dl-horizontal
  %dt= t 'inden_usages.petronas_d_price', :default =>  model_class.human_attribute_name(:petronas_d_price) + ":"
  %dd= ringgols(@inden_usage.petronas_d_price)

.form-actions
  .btn.btn-default= link_to content_tag(:i, "", :class => "fa fa-arrow-left ") + " " + t('.back', :default => t("helpers.links.back")), inden_usages_path
  - if can? :edit, :inden_usages
    .btn.btn-default= link_to content_tag(:i, "", :class => "fa fa-edit") + " " + t('.edit', :default => t("helpers.links.edit")), |
      edit_inden_usage_path(@inden_usage)
    /= link_to content_tag(:i, " New Node", :class => "fa fa-leaf"), new_inden_usage_path, :class => 'btn btn-info'
  - if can? :delete, :inden_usages
    = link_to content_tag(:i, "", :class => "fa fa-trash-o icon-white") + " " + t('.destroy', :default => t("helpers.links.destroy")), |
      inden_usage_path(@inden_usage),                                                                                                    |
      :method => 'delete',                                                                                                           |
      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },                   |
      :class => 'btn btn-danger'                                                                                                     |

